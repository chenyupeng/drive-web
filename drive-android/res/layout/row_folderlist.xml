<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <ImageView
        android:id="@+id/leftImage"
        android:paddingTop="@dimen/listItemPadding"
        android:paddingBottom="@dimen/listItemPadding"
        android:paddingLeft="@dimen/listItemPadding"
        android:paddingRight="@dimen/listItemPadding"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/listItemHeigh"/>

    <TextView
        android:id="@+id/listItem"
        android:textSize="@dimen/listItemTextSize"
        android:paddingTop="@dimen/listItemPadding"
        android:paddingBottom="@dimen/listItemPadding"
        android:paddingLeft="@dimen/listItemPadding"
        android:paddingRight="@dimen/listItemPadding"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/listItemHeigh"
        android:layout_toRightOf="@id/leftImage"
        android:gravity="center_vertical" />
    
    <Button 
        android:id="@+id/delButton"
        android:visibility="invisible"
        android:textSize="@dimen/listItemTextSize"
        android:paddingTop="@dimen/listItemPadding"
        android:paddingBottom="@dimen/listItemPadding"
        android:paddingLeft="@dimen/listItemPadding"
        android:paddingRight="@dimen/listItemPadding"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/listItemHeigh"
        android:text="@string/delButton"
        />
</RelativeLayout>