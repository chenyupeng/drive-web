<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >
    <TextView
        android:id="@+id/listItem"
        android:textSize="@dimen/listItemTextSize"
        android:paddingTop="@dimen/listItemPadding"
        android:paddingBottom="@dimen/listItemPadding"
        android:paddingLeft="@dimen/listItemPadding"
        android:paddingRight="@dimen/listItemPadding"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/listGroupHeigh"
        android:gravity="center_vertical" />
</RelativeLayout>